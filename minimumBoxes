class Solution {
    public int minimumBoxes(int[] apple, int[] capacity) {

        
        int totalApples = 0;
        for (int a : apple) {
            totalApples += a;
        }

        Arrays.sort(capacity);

        
        int usedBoxes = 0;
        int currCapacity = 0;

        for (int i = capacity.length - 1; i >= 0; i--) {
            currCapacity += capacity[i];
            usedBoxes++;

            if (currCapacity >= totalApples) {
                return usedBoxes;
            }
        }

        return usedBoxes;
    }
}
